<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>


<%= link_to '#New_list', new_list_path, class: "btn btn-primary col-12 mb-5" %>
<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <%=link_to list.name, list_path(list), class:"card-category", style:"background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(#{list.movies.first.poster_url}"%>
      </div>
    <% end %>
  </div>
</div>
